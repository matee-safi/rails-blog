<%= render partial: @user, locals: { user: @user, myclass: "" } %>
<div class="posts p-5 pt-4">
  <div class="d-flex justify-content-end">
    <%= link_to new_user_post_path do %>
      <div class="btn user orange-shadow">
        Create Post
      </div>
    <% end %>
  </div>
  <% @user.posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id) do %>
      <div class="shadow-white rounded border p-3 my-4 post">
        <h4 class="mb-4"><%= post.title %></h4>
        <p><%= post.text %></p>
        <div class="d-flex w-100 justify-content-end">
          <h6>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></h6>
        </div>
        <% if post.comments.length > 0 %>
          <div class="comments border-top pt-3 mt-3">
            <% post.recent_comments.each do |comment| %>
              <p><%= comment.author.name %>: <%= comment.text %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
